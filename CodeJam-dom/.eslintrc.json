{
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": 2,
        "linebreak-style": 0
    },

    "extends": "airbnb-base",
    "env": {
        "browser": true    
    
  },
    
  "no-use-before-define": ["error", { "functions": false, "classes": false }]
  
}  